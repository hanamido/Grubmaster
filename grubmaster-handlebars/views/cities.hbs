<div id="browse-cities">
    <table id="cities-table" 
    class="table table-striped table-bordered table-hover" 
    align="center"
    data-search="true"
    >

    {{!-- Header section --}}
    <thead class="justify-content-center" align="center">

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr id="headers">
            <th class="header" scope="col">ID</th>
            <th class="header" scope="col">City Name</th>
            <th class="header" scope="col" id="actions" colspan="2">Action(s)</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr align="center" data-value={{this.city_id}}>
            <td>{{this.city_id}}</td>
            <td>{{this.city_name}}</td>
            {{!-- <td><button onClick="/">Edit</button></td> --}}
            <td><button onClick="deleteCity({{this.city_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
    </table>
<script src="./js/delete_city.js"></script> 

