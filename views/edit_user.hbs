  <div class="form-fields" id="update-user-form" style="display: block">

    <h2>Update a User's Details:</h2>
    <p>Please enter the desired new name, website, email, or city from the dropdown menu.</p>
    <p><small>Note: * indicates a required field.</small></p>
    
        <h4>Please Complete All Fields</h4>
        
                <form action="/users/edit_user.html/{{data.0.user_id}}" id="edit_user_form" method="POST">
        
                    <fieldset>
                        <input type="hidden" value="{{data.0.user_id}}" class="form-control" id="user_id" name="user_id" required>
        
                        <label for="user_first_name">* Name:</label><br>
                        <input type="text" id="user_first" name="user_first_name" value="{{data.0.user_first_name}}" required><br>
        
                        <label for="user_last_name">Website:</label><br>
                        <input type="text" id="user_last_name" name="user_last_name" value="{{data.0.user_last_name}}"><br>
        
                        <label for="user_email_address">Email:</label><br>
                        <input type="text" id="user_email_address" name="user_email_address" value="{{data.0.user_email_address}}"><br>
        
                        <p><label for="update-user-city">* Restaurant City: </label> 
                        <select name="user_city" id="user_city" required>
                            <option value="">Select a City</option>
                            {{#each cities}}
                            <option value="{{this.city_id}}">{{this.city_name}}</option>
                            {{/each}}
                        </select></p>
        
                    </fieldset>
        
                    <input type="submit" value="Edit User" name="editUserButton" id="edit-user-button" class="btn btn-primary"
                    onClick="if (validateForm()) {alert(`Successfully updated User ID #{{data.0.user_id}}`)};">
        
                    <input type="reset" class="btn btn-secondary">
        
                    <a href='/users'><input class="btn btn-secondary" type="button" value="Cancel"></a>    
                </form>
