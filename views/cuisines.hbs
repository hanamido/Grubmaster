<div id="browse-cuisines">
    <table id="cuisines-table" 
    class="table table-striped table-bordered table-hover" 
    align="center"
    data-search="true"
    >

    {{!-- Header section --}}
    <thead class="justify-content-center" align="center">

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr id="headers">
            <th class="header" scope="col">ID</th>
            <th class="header" scope="col">Cuisine Name</th>
            <th class="header" scope="col" id="actions" colspan="2">Action(s)</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr align="center" data-value={{this.cuisine_id}}>
            <td>{{this.cuisine_id}}</td>
            <td>{{this.cuisine_name}}</td>
            {{!-- <td><button onClick="/">Edit</button></td> --}}
            
        </tr>
        {{/each}}
    </tbody>
    </table>

</div>
<p>&nbsp;</p>

<div id="search-cuisine">
    <h2>Search for a Cuisine below.</h2>
    <p>Search by cuisine name using the field below. Partial names are OK too!</p>
    <form id="search-cuisine-form" method='GET' action='/cuisines'>
        <label for="input-cuisine-name">Search by Cuisine Name: </label>
        <input type="text" name="cuisine_name" id="input-cuisine-name-search">
        
        <input type="submit">
        <a href="/cuisines"><button>Reset</button></a>
    </form>
</div>
<p>&nbsp;</p>

{{!-- Add data using AJAX --}}
<div id="add-cuisine">
    <h2>Add a new cuisine: </h2>
    <p>To add a new restaurant, please enter the information below and click 'Submit'! </p>
    <p><small>Note: * indicates a required field.</small></p>
    <form id="add-cuisine-form-ajax">
        <p><label for="input-cuisine-name">* Cuisine Name: </label>
        <input type="text" name="input-cuisine-name" id="input-cuisine-name" placeholder="*Name"></p>
        <input type="submit">

    </form>
</div>

<script src="./js/add_cuisine.js"></script>
<p>&nbsp;</p>

<div id="update-cuisine">
<h2>Update a Cuisine's Details:</h2>
<p>To update a specific cuisine's details, select their ID from the dropdown menu on the left and enter the desired name.</p>
<p><small>Note: * indicates a required field.</small></p>
<form id="update-cuisine-form-ajax">

    <label for="selectedCuisine">* Select a Cuisine ID</label>
    <select name="selectedCuisine" id="selectedCuisine">
        <option value="">Cuisine ID</option>
        {{#each data}}
        <option value="{{this.cuisine_id}}">{{this.cuisine_id}}</option>
        {{/each}}
    </select>

    <p><label for="update-cuisine-name" autocomplete="on">* Cuisine Name: </label>
    <input type="text" name="update-cuisine-name" id="update-cuisine-name"></p>

    <input type="submit">

</form>

</div>

</div>

