<!DOCTYPE html> 
<html>
<head>
    <meta charset="utf-8">
    <title>Edit a Cuisine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1", shrink-to-fit="yes">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous"/>
    <link rel="stylesheet" href="/css/style.css" type="text/css"/>
</head>

<body>
<script src="./js/validateForms.js"></script>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-center">
    <div class="navbar-nav">
      <a class="nav-item nav-link" href="/">Home<span class="sr-only"></span></a>
      <a class="nav-item nav-link" href="/restaurants">Restaurants</a>
      <a class="nav-item nav-link active" href="/cuisines">Cuisines</a>
      <a class="nav-item nav-link" href="/cities">Cities</a>
      <a class="nav-item nav-link" href="/users">Users</a>
      <a class="nav-item nav-link" href="/reviews">Reviews</a>
      <a class="nav-item nav-link" href="/restaurant_has_cuisines">Restaurants' Cuisines</a>
    </div>
</nav>

<p></p>

<div class="form-fields" id="update-cuisine-form" style="display: block">

<h2>Update a Cuisine's Details:</h2>
<p>Please enter all required fields to be updated.<br>
<small>Note: * indicates a required field.</small></p>

  <form action="/cuisines/edit_cuisine.html/{{data.0.cuisine_id}}" id="edit_cuisine_form" method="POST">
      <input type="hidden" value="{{data.0.cuisine_id}}" class="form-control" id="cuisine_id" name="cuisine_id" required>

      <p><label for="cuisine_name">* Cuisine Name:</label>
      <input type="text" id="cuisine_name" name="cuisine_name" value="{{data.0.cuisine_name}}" required></p>
      
      <input type="submit" value="Edit Cuisine" name="editCuisine" id="edit-cuisine-button" class="btn btn-primary" 
        onClick="validateForm({{data.0.cuisine_id}});">

      <input type="reset" class="btn btn-secondary">

      <a href='/cuisines'><input class="btn btn-secondary" type="button" value="Cancel"></a>

  </form>

<script>
    // Checks if every required field is filled out before sending alert
    function validateForm(rowID) {
        let requiredFields = document.getElementById('update-cuisine-form')
            .querySelectorAll('[required]')
        let valid = []; 
        requiredFields.forEach((element) => {
            if (element.value !== "") {
                valid.push(true)
            } else {valid.push(false)}
        })
        let checker = arr => arr.every(v => v === true); 
        if (checker(valid)) {
            alert(`Successfully Updated Cuisine ID #${rowID}! Refreshing page...`)
        }
    }
</script>

</body>
</html>